   public static int[][] matrizA(int linhas, int colunas){
        int[][]matrizA = new int[linhas][colunas];
        linhas = leitor.nextInt();
        colunas = leitor.nextInt();
        return matrizA;
    }
 
    public static int [][]dadosMatrizA(int[][]matrizA){
       for(int i = 0; i < matrizA.length; i++){
            for(int j = 0; j < matrizA[i].length; j++){
                matrizA[i][j] = leitor.nextInt();
            }
        }
       return matrizA;
    }
    
    public static void mostrarMatrizA(int[][]matrizA){
        for(int i = 0; i < matrizA.length; i++){
            for(int j = 0; i < matrizA[i].length; i++){
                System.out.printf("Matriz[%d][%d]: %d", i,j, matrizA[i][j]);
            }
        }
    }
    
    public static int[][] matrizB(int linhas, int colunas){
